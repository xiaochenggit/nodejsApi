extends ../layout
block content
	.container
		.row
			.col-md-7
				embed(src="#{movie.flash}",allowFullScreen='true',quality="high",width="720",height="600",align="middle",type="application/x-shockwave-flash")
				ul.media-list
					each item in comments
						li.media
							.media-left
								a.comment(href="#comments",data-cid="#{item._id}",data-tid="#{item.from._id}")
									img.media-object(src="data:image/svg+xml;base64,",alt="#{item.from}",style="width:64px;height:54px")
							.media-body
								h4.media-heading #{item.from.name}
								p #{item.content}
									if item.replay&&item.replay.length>0
										each replay in item.replay
											.media
												.media-left
													a.comment(href="#comments",data-cid="#{item._id}",data-tid="#{replay.from._id}")
														img.media-object(src="data:image/svg+xml;base64,",alt="#{replay.from.name}",style="width:64px;height:54px")
												.media-body
													h4.media-heading #{replay.from.name} 回复 #{replay.to.name}
													p #{replay.content}
				#comments
				form#commentForm(method="POST",action="/user/comment")
					input(type="hidden",name="comment[movie]",value="#{movie._id}")
					if user
						input(type="hidden",name="comment[from]",value="#{user._id}")
					.form-group
						textarea.form-control(name="comment[content]",row="3")
						if user
							button.btn.btn-primary(type="submit") 提交
						else
							a.btn.btn-primary(href="#",data-toggle="modal",data-target="#signupModal") 登陆
			.col-md-5
				dl.dl-horizontal
					dt 电影名字
					dd #{movie.title}
					dt 导演
					dd= movie.doctor
					dt 国家
					dd= movie.country
					dt 语言
					dd= movie.language
					dt 上映年份
					dd= movie.year
					dt 简介
					dd= movie.summary
	script(src="/jquery/dist/detail.js")