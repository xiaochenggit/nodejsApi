extends ../layout
block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 用户名
						th 录入时间
						th 权限
						th 更新
						th 删除
				tbody
					each item in users
						tr(class="item-id-#{item._id}")
							td #{item.name}
							td #{moment(item.meta.updataAt).format("MM/DD/YYYY")}
							td #{item.role}
							td: a(target="_blank",href="../admin/updata/#{item._id}") 修改
							td: button.btn.btn-danger.del(type="button",id="#{item._id}") 删除
	script(src="/jquery/dist/admin.js")