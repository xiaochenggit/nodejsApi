<% include  ../common/header.ejs %>
	<div class="container">
		<table class="table">
      <thead>
        <tr>
          <th>电影名</th>
          <th>导演</th>
          <th>上映时间</th>
          <th>查看</th>
          <th>更新</th>
          <th>删除</th>
        </tr>
      </thead>
      <tbody>
        <% movies.forEach(function(item){ %>
					<tr>
						<td><%= item.name %></td>
						<td><%= item.author %></td>
						<td><%= item.year %></td>
						<td><a href="/movie/<%= item._id %>">查看</a></td>
						<td><a href="/movie/update/<%= item._id %>">更新</a></td>
						<td><button class="btn btn-danger">删除</button></td>
					</tr>
        <% }) %>
      </tbody>
    </table>
	</div>
<% include  ../common/footer.ejs %>