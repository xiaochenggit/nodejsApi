<%- include  ../common/header.ejs %>
	<div class="container">
		<div class=" movie-list">
				<div class="panel panel-default">
				  <div class="panel-heading"><%= name %></div>
				  <div class="panel-body">
				  	<div class="row">
				  		<% movies.forEach(function (item) { %>
						<div class="col-sm-3 col-md-2">
							<div class="thumbnail">
								<% if (item.poster.indexOf('http') > -1 ) { %>
									<img src="<%= item.poster %>" alt="">
								<% } else { %>
									<img src="upload/<%= item.poster %>" alt="">
								<% } %>
								<div class="caption">
									<h3><%= item.name %></h3>
									<p><%= item.author %></p>
									 <p><a href='movie/<%= item._id %>' class="btn btn-primary" role="button">观看预告片</a></p>
								</div>
							</div>
						</div>
						<% }) %>
				  	</div>
					<div class="page-footer">
						<nav aria-label="...">
						  <ul class="pager">
						  	<% if(!q) { %>
						    <li class="previous">
						    	<a href="/movieSreach?id=<%=categoryId%>&page=<%= oldPage %>">
						    		<span aria-hidden="true">&larr;</span> 上一页
						    	</a>
						    </li>
						    <li class="next">
						    	<a href="/movieSreach?id=<%=categoryId%>&page=<%=nextPage%>">下一页 
						    		<span aria-hidden="true">&rarr;</span>
						    	</a>
						    </li>
						    <% } else { %>
						    <li class="previous">
						    	<a href="/movieSreach?q=<%=q%>&page=<%= oldPage %>">
						    		<span aria-hidden="true">&larr;</span> 上一页
						    	</a>
						    </li>
						    <li class="next">
						    	<a href="/movieSreach?q=<%=q%>&page=<%=nextPage%>">下一页 
						    		<span aria-hidden="true">&rarr;</span>
						    	</a>
						    </li>
						    <% } %>
						  </ul>
						</nav>
					</div>
				  </div>
				</div>
		</div>
	</div>
<% include  ../common/footer.ejs %>